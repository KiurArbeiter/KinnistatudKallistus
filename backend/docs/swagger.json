{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Hug API",
      "description": "API for managing hugs"
    },
    "host": "localhost:3001",
    "basePath": "/",
    "schemes": ["http"],
    "paths": {
      "/hugs": {
        "get": {
          "summary": "Get all hugs",
          "responses": {
            "200": {
              "description": "A list of hugs",
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/Hug"
                }
              }
            }
          }
        },
        "post": {
          "summary": "Create a hug",
          "parameters": [
            {
              "in": "body",
              "name": "hug",
              "required": true,
              "schema": {
                "$ref": "#/definitions/HugInput"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Hug created",
              "schema": {
                "$ref": "#/definitions/Hug"
              }
            },
            "400": {
              "description": "Missing required field 'name'"
            }
          }
        }
      },
      "/hugs/{id}": {
        "get": {
          "summary": "Get a hug by ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "integer"
            }
          ],
          "responses": {
            "200": {
              "description": "Hug found",
              "schema": {
                "$ref": "#/definitions/Hug"
              }
            },
            "400": {
              "description": "Invalid ID supplied"
            },
            "404": {
              "description": "Hug not found"
            }
          }
        },
        "put": {
          "summary": "Update a hug by ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "integer"
            },
            {
              "in": "body",
              "name": "hug",
              "required": true,
              "schema": {
                "$ref": "#/definitions/HugInput"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Hug updated",
              "schema": {
                "$ref": "#/definitions/Hug"
              }
            },
            "400": {
              "description": "Missing required field 'name'"
            },
            "404": {
              "description": "Hug not found"
            }
          }
        },
        "delete": {
          "summary": "Delete a hug by ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "integer"
            }
          ],
          "responses": {
            "204": {
              "description": "Hug deleted"
            },
            "400": {
              "description": "Invalid ID supplied"
            },
            "404": {
              "description": "Hug not found"
            }
          }
        }
      }
    },
    "definitions": {
      "Hug": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number"
          }
        }
      },
      "HugInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number"
          }
        },
        "required": ["name"]
      }
    }
  }
  